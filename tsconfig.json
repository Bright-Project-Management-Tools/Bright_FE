{
    "compilerOptions": {
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@features/*": ["./src/features/*"],
            "@utils/*": ["./src/utils/*"],
            "@assets/*": ["./src/assets/*"],
            "@test/*": ["./src/test/*"],
            "@components/*": ["./src/components/*"],
            "@constants/*": ["./src/config/constants/*"],
        },
        "resolveJsonModule": true,
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true
    },
    "include": ["src", "./declarations.d.ts"]
}
